{
  "policy": {
    "description": "fluentd hot warm workflow",
    "default_state": "hot",
    "schema_version": 1,
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "replica_count": {
                "number_of_replicas": 2
            },
            "rollover": {
                "min_doc_count": 100

            }
          }
        ],
        "transitions": [
          {
            "state_name": "warm"
          }
        ]
      },
      {
        "name": "warm",
        "actions": [
          {
            "replica_count": {
                "number_of_replicas": 1
            }
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": {
      "index_patterns": ["{{ index_name }}*"]
    }
  }
}
